<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="card">
    <div class="card-header h3 text-center">
      Sign Up
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>



    <div class="card-body bg-dark">
      <div class="form-group col-md-4">
        <%= f.label :email %>
        <%= f.email_field(:email, placeholder: "Email", autofocus: true, autocomplete: "email", :class => 'form-control form-control-sm') %>
      </div>
      <div class="form-group col-md-3">
        <%= f.label :first_name %>
        <%= f.text_field(:first_name, placeholder: "First Name", :class => 'form-control form-control-sm') %>
      </div>
      <div class="form-group col-md-5">
        <%= f.label :last_name %>
        <%= f.text_field(:last_name, placeholder: "Last Name", :class => 'form-control form-control-sm') %>
      </div>
      <div class="form-group col-md-4">

        <div class="field">
          <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          <%= f.password_field :password, autocomplete: "new-password" , :class => 'form-control form-control-sm' %>
        </div>
      </div>
      <div class="form-group col-md-4">

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'form-control form-control-sm' %>
        </div>

      </div>

    
      <div class="actions">
        <%= f.submit "Sign up", :class => 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
